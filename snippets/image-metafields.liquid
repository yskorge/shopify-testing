{% comment %}
{% render 'image-metafields', image: , class_name: , image_attr: , %}
{% endcomment %}

{%- assign alt = image.alt -%}
{%- assign image_url = image.cloudinary_src | append: 'w_1,h_1' -%}

<img id="{{ image.id }}"
     class="{{ class_name }} Image--lazyLoad image-fadeIn"
     alt="{{ alt }}"
     data-src="{{ img_url }}"
     data-srcset="{{ image.cloudinary_src | append: 'w_360' }} 360w,
                  {{ image.cloudinary_src | append: 'w_540' }} 540w,
                  {{ image.cloudinary_src | append: 'w_720' }} 720w,
                  {{ image.cloudinary_src | append: 'w_900' }} 900w,
                  {{ image.cloudinary_src | append: 'w_1080' }} 1080w,
                  {{ image.cloudinary_src | append: 'w_1296' }} 1296w,
                  {{ image.cloudinary_src | append: 'w_1512' }} 1512w,
                  {{ image.cloudinary_src | append: 'w_1728' }} 1728w"
     data-aspectratio="{{ image.aspect_ratio }}"
     data-sizes="auto"
        {{ image_attr }}>
<span class="Image__Loader"></span>
