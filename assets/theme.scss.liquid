  max-width: 1580px;
  width: 100%;
  padding-left: 15px;
  padding-right: 15px;
  margin-left: auto;
  margin-right: auto;

  @include av-mq('tablet-and-up') {
    padding-left: 60px;
    padding-right: 60px;
  }

