/**
 * ----------------------------------------------------------------------------
 * Mega menu
 * ----------------------------------------------------------------------------
 */

.MegaMenu {
  position: absolute;
  width: 100%;
  left: 0;
  top: 100%;
  visibility: hidden;
  opacity: 0;
  max-height: 650px;
  height: 650px;
  overflow: auto;
  -ms-scroll-chaining: none;
  overscroll-behavior: contain;
  text-align: left;
  background-color: $header-submenu-background;
  border-bottom: 1px solid $header-border-color;
  transition: all 0.3s ease-in-out;
  pointer-events: none;
  background: linear-gradient(to right, $header-submenu-background 355px, $header-subsubmenu-background 355px 100% );

  @supports (--css: variables) {
    max-height: calc(100vh - var(--header-height) - var(--announcement-bar-height));
  }
}

.MegaMenu[aria-hidden="false"] {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.MegaMenu__Inner {
  display: flex;
  flex-wrap: nowrap;
  margin: 0 auto;
  height: 100%;
  position: relative;
}

.MegaMenu--spacingEvenly .MegaMenu__Inner {
  justify-content: space-around;
  justify-content: space-evenly; /* space-evenly is not supported everywhere */
}

.MegaMenu--spacingCenter .MegaMenu__Inner {
  justify-content: center;
}

.MegaMenu--grid .MegaMenu__Inner {
  @supports (display: grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }
}

.MegaMenu__submenu {
  height: 100%;
  width: 100%;
  max-width: 355px;
  flex: 1 1 auto;

  .Linklist__Item {
    margin-bottom: 0;
    padding: 10px 50px;
    cursor: pointer;

    &.active {
      background-color: $header-subsubmenu-background;

      .Icon {
        opacity: 1;
        visibility: visible;
      }
    }

    .Icon {
      transition: all 0.2s ease-in-out;
      opacity: 0;
      visibility: hidden;
      position: absolute;
      right: 24px;
      top: 50%;
      transform: translateY(-63%);
      height: 17px;
      width: auto;
    }
  }
}

.SubMegaMenu {
